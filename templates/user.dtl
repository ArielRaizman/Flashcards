  <style type="text/css">
    /* style go here */
    .score {float:right;}
  </style>
</head>
<body>
  <!-- content is here -->
<form method="post">
	<div> {{card}} </div>
	<span class="score">
		correct={{correct}} &nbsp; wrong={{wrong}}
